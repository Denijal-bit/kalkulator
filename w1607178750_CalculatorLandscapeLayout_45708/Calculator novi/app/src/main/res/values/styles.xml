<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>


    <style name="numberButton" parent="@android:style/Widget.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:textSize">28dp</item>
        <item name="android:background">@drawable/custom_button_numbers</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>



    <style name="operationButton" parent="@android:style/Widget.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:textSize">26dp</item>
        <item name="android:background">@drawable/custom_button_operations</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

</resources>
